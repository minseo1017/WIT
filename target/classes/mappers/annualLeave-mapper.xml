<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="annualLeave"> 
	
	<!-- 해당 사원의 남은 연차 갯수를 조회하는 쿼리문 -->
	<select id="selectRemaingLeaves" resultType="Integer">
		select remaining_leaves from annual_leave where emp_no = #{empNo}
	</select>
</mapper>